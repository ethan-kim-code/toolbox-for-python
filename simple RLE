def rle_encode(data):
    encoding = ""
    prev_char = ""
    count = 1

    for char in data:
        if char != prev_char:
            if prev_char:
                encoding += prev_char + str(count)
            count = 1
            prev_char = char
        else:
            count += 1
    encoding += prev_char + str(count)
    return encoding

text = "aaabbcddd"
encoded = rle_encode(text)
print("RLE Encoded:", encoded)
